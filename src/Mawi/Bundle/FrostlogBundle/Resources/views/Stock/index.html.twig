<h1>Stock list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Arrival</th>
            <th>Departure</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('stock_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.arrival %}{{ entity.arrival|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.departure %}{{ entity.departure|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.quantity }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('stock_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('stock_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('stock_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
