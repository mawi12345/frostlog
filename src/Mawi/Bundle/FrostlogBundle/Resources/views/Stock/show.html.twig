<h1>Stock</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Arrival</th>
            <td>{{ entity.arrival|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Departure</th>
            <td>{{ entity.departure|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Quantity</th>
            <td>{{ entity.quantity }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('stock') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('stock_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('stock_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
